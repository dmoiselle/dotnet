@using Bridge.Web
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Bridge.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/datatable.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/datatable_jquery_ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content( "~/Content/themes/base/minified/jquery-ui.min.css?n=" + MvcApplication.CurrentVersion.ToString() )" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/minified/jquery.ui.dialog.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobstrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content( "~/Scripts/bia.js?n=" + MvcApplication.CurrentVersion.ToString() )" type="text/javascript"> </script>
    @RenderSection( "PageSpecificScriptIncludes", false )
</head>

<body>
    <div id="header">
        <a href="@Url.Action( "Index", "Home" )">
            <img id="bia-logo" src="@Url.Content("~/Content/images/BridgeLogo.jpg")" alt="Bridge Logo" />
        </a>

        <div id="bia-login">
            @Html.Partial("_LogOnPartial")
        </div>
        @Html.Partial("~/Views/Shared/SiteNavigation.cshtml")
        <div class="clear-float"></div>
    </div>

    <div id="main">
        @RenderBody()
        <div id="footer">
        </div>
    </div>

    <div style="display:none">
        <div id="bia-message-dialog"><div id="bia-message-dialog-content"></div></div>
    </div>

    <script type="text/javascript">
        $("#bia-navigation-options li").hover(
            function () {
                $(this).addClass("hover");
            },
            function () {
                $(this).removeClass("hover");
            });


        $("#bia-login").hover(
            function () {
                $(this).addClass("hover");
            },
            function () {
                $(this).removeClass("hover");
            });
    </script>
    @RenderSection( "PageSpecificScripts", false )
</body>
</html>
